include layoutold
include header
include jumbotron
block main-content

-var dateNow = new Date();
-var dd = dateNow.getDate();
-var monthSingleDigit = dateNow.getMonth() + 1
- var mm = monthSingleDigit < 10 ? '0' + monthSingleDigit : monthSingleDigit;
-var yy = dateNow.getFullYear().toString();

-var formattedDate = yy + '-' + mm + '-' + dd;

  .section
          .container 
            .well
              form.form-horizontal(id="entryform", method="post")
                fieldset
                legend Input Entry
                  .form-group
                    label.col-md-2.control-label(for="timestamp") Date
                    .col-md-5
                     input.form-control(name="timestamp", type="date", value='#{formattedDate}')            
                  .form-group
                    label.col-md-2.control-label(for="user") User
                    .col-md-10
                      select.form-control(name="user")
                        option(value='Dragon') Dragon
                        option(value='Nighthawk') Nighthawk
                        option(value='Bozo', selected=bozo) Bozo
                  .form-group
                    label.col-md-2.control-label(for="minutes") Minutes
                    .col-md-10
                      input.form-control(name="minutes", type="number", value='#{formattedDate}', placeholder="minutes", required, data-required-msg='Minutes is required')
                  .form-group
                    label.col-md-2.control-label(for="comments") Comments
                    .col-md-10
                      input.form-control(name="comments", type="text", placeholder="comments",  required, data-required-msg='Comments are required')
                  .form-group
                    .col-md-10.col-md-offset-2
                      .pull-right
                        button.btn.btn-primary Submit
                        | &nbsp;
                        a.btn.btn-default(href="/homeold") Cancel
 